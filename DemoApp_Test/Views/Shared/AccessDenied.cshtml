@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Truy cập bị từ chối</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style type="text/css">
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .access-denied-container {
            background: white;
            padding: 2.5rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 450px;
            width: 90%;
            -webkit-animation: slideIn 0.5s ease-out;
            animation: slideIn 0.5s ease-out;
        }

        @@-webkit-keyframes slideIn {
            from {
                -webkit-transform: translateY(-20px);
                transform: translateY(-20px);
                opacity: 0;
            }

            to {
                -webkit-transform: translateY(0);
                transform: translateY(0);
                opacity: 1;
            }
        }

        @@keyframes slideIn {
            from {
                transform: translateY(-20px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .access-denied-icon {
            width: 80px;
            height: 80px;
            background: #fee2e2;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
        }

            .access-denied-icon i {
                font-size: 40px;
                color: #dc2626;
            }

        .title {
            color: #1f2937;
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .message {
            color: #6b7280;
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-back {
            background: #3b82f6;
            color: white;
            border: none;
            margin-right: 0.75rem;
        }

            .btn-back:hover {
                background: #2563eb;
                transform: translateY(-1px);
            }

        .btn-home {
            background: #f3f4f6;
            color: #4b5563;
            border: 1px solid #e5e7eb;
        }

            .btn-home:hover {
                background: #e5e7eb;
                color: #374151;
            }

        .button-group {
            display: flex;
            justify-content: center;
            gap: 1rem;
        }
    </style>
</head>
<body>
    <div class="access-denied-container">
        <div class="access-denied-icon">
            <i class="fas fa-lock"></i>
        </div>
        <h2 class="title">Truy cập bị từ chối</h2>
        <p class="message">Bạn không có quyền truy cập trang này. Vui lòng liên hệ quản trị viên để được hỗ trợ.</p>
        <div class="button-group">
            <button class="btn btn-back" onclick="goBack()">
                <i class="fas fa-arrow-left me-2"></i>Trở lại
            </button>
            <a href="/" class="btn btn-home">
                <i class="fas fa-home me-2"></i>Trang chủ
            </a>
        </div>
    </div>

    <script>
        function goBack() {
            window.history.back();
        }

        // Auto redirect after 5 seconds
        setTimeout(function() {
            window.history.back();
        }, 5000);
    </script>
</body>
</html>