<div class="modern-header">
    <div class="container">
        <div class="header-wrapper">
            <div class="header-left">
                <span class="header-text">
                    <i class="fas fa-shipping-fast me-2"></i>
                    Miễn phí ship trên toàn quốc
                </span>
            </div>
            <div class="header-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="user-menu">
                        <div class="dropdown">
                            <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown">
                                <div class="user-info">
                                    <div class="avatar">
                                        <img src="~/Login/images/img-02.jpg" alt="avatar">
                                        <span class="status"></span>
                                    </div>
                                    <span class="username">@User.Identity.Name</span>
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                            </a>
                            <div class="dropdown-menu">
                                @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                                {
                                    <a class="dropdown-item admin-link" href="/Admin">
                                        <i class="fas fa-user-shield me-2"></i>Quản trị viên
                                    </a>
                                    <div class="dropdown-divider admin-divider"></div>
                                }
                                <a class="dropdown-item" href="@Url.Action("Profile", "Account")">
                                    <i class="fas fa-user me-2"></i>Tài khoản của tôi
                                </a>
                                <a class="dropdown-item" href="@Url.Action("OrderHistory", "Account")">
                                    <i class="fas fa-shopping-bag me-2"></i>Đơn hàng
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/Login/Login/Logout">
                                    <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                </a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <a href="@Url.Action("Index", "Login", new { area = "Login", returnUrl = Context.Request.Path })" class="auth-link">
                        <i class="fas fa-user me-1"></i> Đăng nhập
                    </a>

                } 
                <a href="/Home/faq" class="help-link">
                    <i class="fas fa-question-circle me-1"></i> Hỗ trợ
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .dropdown-item.admin-link {
        color: #e74c3c;
        font-weight: 500;
    }

        .dropdown-item.admin-link:hover {
            background-color: #fef2f2;
            color: #c0392b;
        }

        .dropdown-item.admin-link i {
            color: #e74c3c;
        }

    /* Divider styling for admin section */
    .admin-divider {
        margin: 4px 0;
        border-top: 2px solid #f1f1f1;
    }
    .modern-header {
        background: #2c3e50;
        padding: 10px 0;
        color: #fff;
    }

    .header-wrapper {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .header-text {
        font-size: 14px;
        color: #ecf0f1;
    }

    .header-right {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    /* User Menu Styling */
    .user-menu .dropdown-toggle {
        text-decoration: none;
        color: #fff;
    }

        .user-menu .dropdown-toggle::after {
            display: none;
        }

    .user-info {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 5px 10px;
        border-radius: 25px;
        transition: background-color 0.3s;
    }

        .user-info:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

    .avatar {
        position: relative;
        width: 32px;
        height: 32px;
    }

        .avatar img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
        }

    .status {
        position: absolute;
        bottom: 0;
        right: 0;
        width: 8px;
        height: 8px;
        background-color: #2ecc71;
        border-radius: 50%;
        border: 2px solid #2c3e50;
    }

    .username {
        font-size: 14px;
        font-weight: 500;
    }

    /* Dropdown Menu Styling */
    .dropdown-menu {
        margin-top: 10px;
        border: none;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        border-radius: 8px;
        padding: 8px 0;
    }

    .dropdown-item {
        padding: 8px 20px;
        font-size: 14px;
        color: #2c3e50;
        transition: background-color 0.2s;
    }

        .dropdown-item:hover {
            background-color: #f8f9fa;
            color: #16a085;
        }

        .dropdown-item i {
            width: 20px;
            color: #95a5a6;
        }

    /* Currency Selector Styling */
    .currency-selector .form-select {
        background-color: transparent;
        border: none;
        color: #fff;
        font-size: 14px;
        cursor: pointer;
        padding-right: 20px;
    }

        .currency-selector .form-select:focus {
            box-shadow: none;
            border: none;
        }

        .currency-selector .form-select option {
            background-color: #fff;
            color: #2c3e50;
        }

    /* Auth and Help Links */
    .auth-link, .help-link {
        color: #fff;
        text-decoration: none;
        font-size: 14px;
        transition: color 0.3s;
    }

        .auth-link:hover, .help-link:hover {
            color: #3498db;
        }
         
</style>