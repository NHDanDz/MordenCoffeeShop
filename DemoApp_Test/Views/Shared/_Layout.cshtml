    <script>
        $(document).ready(function() {
            // Polyfill cho các hàm parse
            if (typeof parsedouble === 'undefined') {
                window.parsedouble = function(value) {
                    return parseFloat(value) || 0;
                };
            }

            // Fix cho chart
            if (typeof Chart !== 'undefined') {
                const originalGetRelativePosition = Chart.helpers.getRelativePosition;
                Chart.helpers.getRelativePosition = function(evt, chart) {
                    try {
                        return originalGetRelativePosition(evt, chart);
                    } catch (e) {
                        const rect = chart.canvas.getBoundingClientRect();
                        const x = evt.clientX - rect.left;
                        const y = evt.clientY - rect.top;
                        return {
                            x: x,
                            y: y
                        };
                    }
                };
            }
        });
    </script>
    @section Scripts {
        <script>
            $(document).ready(function() {
                // Initialize background images
                function initSetBg() {
                    $('.set-bg').each(function() {
                        var bg = $(this).data('setbg');
                        $(this).css('background-image', `url(${bg})`);
                    });
                }

                // Initial load
                initSetBg();

                // Filter handling
                function applyFilters() {
                    var params = {
                        query: $('#searchQuery').val(),
                        brandId: $('input[name="brand"]:checked').val(),
                        typeId: $('input[name="type"]:checked').val(),
                        price: $('input[name="price"]:checked').val(),
                        sort: $('#sortOrder').val(),
                        page: 1
                    };

                    $.get('/Home/LoadProducts', params, function(response) {
                        $('.product-grid').html(response);
                        initSetBg();
                    });
                }

                // Event handlers
                $('input[name="brand"], input[name="type"], input[name="price"]').change(applyFilters);
                $('#sortOrder').change(applyFilters);
                $('#searchForm').submit(function(e) {
                    e.preventDefault();
                    applyFilters();
                });

                // Pagination handling
                $(document).on('click', '.page-link', function(e) {
                    e.preventDefault();
                    var page = $(this).data('page');
                    var params = {
                        page: page,
                        query: $('#searchQuery').val(),
                        brandId: $('input[name="brand"]:checked').val(),
                        typeId: $('input[name="type"]:checked').val(),
                        price: $('input[name="price"]:checked').val(),
                        sort: $('#sortOrder').val()
                    };

                    $.get('/Home/LoadProducts', params, function(response) {
                        $('.product-grid').html(response);
                        initSetBg();
                    });
                });
            });
        </script>
    }
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var url = window.location.pathname;
            var menuItems = document.querySelectorAll("ul li a");

            menuItems.forEach(function(item) {
                if(item.getAttribute("href") === url) {
                    // Xóa lớp active khỏi tất cả các mục
                    document.querySelectorAll("ul li").forEach(function(li) {
                        li.classList.remove("active");
                    });
                    // Thêm lớp active cho mục hiện tại
                    item.parentElement.classList.add("active");
                }
            });
        });
        $(document).ready(function() {
    // Lấy URL hiện tại
    var currentUrl = window.location.pathname;
    
    // Thêm class active cho li chứa link tương ứng
    $('nav li a').each(function() {
        var linkUrl = $(this).attr('href');
        // Kiểm tra nếu href của link match với URL hiện tại
        if (linkUrl === currentUrl || (currentUrl === '/' && linkUrl === '/Home/Index')) {
            $(this).parent('li').addClass('active');
        }
    });
});
    </script>
