@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
} 

<!-- Header Section End -->
<!-- Hero Section Begin -->
<section class="hero" >
    <div class="hero__slider owl-carousel">
        @await Component.InvokeAsync("Banner", new { backgroundImage = "img/hero/hero-1.jpg" })
        @await Component.InvokeAsync("Banner", new { backgroundImage = "img/hero/hero-2.jpg" })
        @await Component.InvokeAsync("Banner", new { backgroundImage = "img/hero/hero-3.jpg" })
