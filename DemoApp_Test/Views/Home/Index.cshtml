<style>
    /* Section Title Styling */
    .section-title {
        margin-bottom: 50px;
    }

        .section-title .subtitle {
            display: block;
            font-size: 16px;
            color: #F89B28;
            text-transform: uppercase;
            letter-spacing: 3px;
            margin-bottom: 10px;
        }

        .section-title .title {
            font-size: 36px;
            color: #662C1B;
            font-weight: 700;
            margin-bottom: 15px;
        }

    .title-separator {
        display: inline-block;
        position: relative;
        margin-top: 20px;
    }

        .title-separator i {
            color: #F89B28;
            font-size: 24px;
            position: relative;
            z-index: 1;
        }

        .title-separator::before,
        .title-separator::after {
            content: "";
            position: absolute;
            top: 50%;
            width: 50px;
            height: 2px;
            background: #F89B28;
            opacity: 0.3;
        }

        .title-separator::before {
            right: 35px;
        }

        .title-separator::after {
            left: 35px;
        }

    /* Blog Card Styling */
    .blog-card {
        background: #fff;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin-bottom: 30px;
    }

        .blog-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

    .blog-card__image {
        position: relative;
        overflow: hidden;
    }

        .blog-card__image img {
            width: 100%;
            height: 250px;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

    .blog-card:hover .blog-card__image img {
        transform: scale(1.1);
    }

    .blog-card__date {
        position: absolute;
        top: 15px;
        left: 15px;
        background: #F89B28;
        color: #fff;
        padding: 10px 15px;
        border-radius: 8px;
        text-align: center;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

        .blog-card__date .day {
            display: block;
            font-size: 20px;
            font-weight: 700;
            line-height: 1;
        }

        .blog-card__date .month {
            display: block;
            font-size: 14px;
            text-transform: uppercase;
        }

    .blog-card__content {
        padding: 25px;
    }

    .blog-card__title {
        font-size: 18px;
        color: #662C1B;
        margin-bottom: 15px;
        font-weight: 600;
        line-height: 1.4;
        height: 50px;
        overflow: hidden;
    }

    .blog-card__excerpt {
        color: #666;
        font-size: 14px;
        line-height: 1.6;
        margin-bottom: 20px;
        height: 45px;
        overflow: hidden;
    }

    .blog-card__link {
        color: #F89B28;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: color 0.3s ease;
    }

        .blog-card__link i {
            margin-left: 8px;
            transition: transform 0.3s ease;
        }

        .blog-card__link:hover {
            color: #662C1B;
        }

            .blog-card__link:hover i {
                transform: translateX(5px);
            }
             
    /* Hero Section Enhancement */
    .hero__slider {
        position: relative;
        overflow: hidden;
    }

        .hero__slider .owl-carousel {
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

    /* About Section Enhancement */
    .section-title h4 {
        position: relative;
        display: inline-block;
        padding-bottom: 10px;
    }

        .section-title h4:after {
            content: '';
            position: absolute;
            width: 50%;
            height: 2px;
            background: #F89B28;
            bottom: 0;
            left: 25%;
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

    .section-title:hover h4:after {
        transform: scaleX(1);
    }

    .section-title h1 {
        position: relative;
        overflow: hidden;
        padding-bottom: 15px;
    }

        .section-title h1:before {
            content: '';
            position: absolute;
            width: 60px;
            height: 3px;
            background: #662C1B;
            bottom: 0;
            left: 0;
        }

    /* Vision Text Enhancement */
    .vision-text h5 {
        position: relative;
        padding-left: 20px;
        transition: all 0.3s ease;
    }

        .vision-text h5:before {
            content: '';
            position: absolute;
            width: 3px;
            height: 100%;
            background: #F89B28;
            left: 0;
            top: 0;
            transform: scaleY(0);
            transition: transform 0.3s ease;
        }

    .vision-text:hover h5:before {
        transform: scaleY(1);
    }

    /* Service Section Enhancement */
    .col-lg-6.mb-5 {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .col-lg-6.mb-5:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        .col-lg-6.mb-5 img {
            transition: transform 0.5s ease;
            border-radius: 10px;
        }

        .col-lg-6.mb-5:hover img {
            transform: scale(1.05);
        }

        .col-lg-6.mb-5 h4 {
            position: relative;
            padding-bottom: 10px;
            margin-bottom: 15px;
            color: #662C1B;
            transition: color 0.3s ease;
        }

        .col-lg-6.mb-5:hover h4 {
            color: #F89B28;
        }

        .col-lg-6.mb-5 h4:after {
            content: '';
            position: absolute;
            width: 40px;
            height: 2px;
            background: #F89B28;
            bottom: 0;
            left: 0;
            transition: width 0.3s ease;
        }

        .col-lg-6.mb-5:hover h4:after {
            width: 100%;
        }

    /* Banner Section Enhancement */
    .banner__item {
        position: relative;
        overflow: hidden;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .banner__item:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.15);
        }

    .banner__item__pic img {
        transition: transform 0.5s ease;
    }

    .banner__item:hover .banner__item__pic img {
        transform: scale(1.1);
    }

    .banner__item__text {
        background: rgba(255,255,255,0.95);
        padding: 20px;
        transition: background 0.3s ease;
    }

    .banner__item:hover .banner__item__text {
        background: rgba(255,255,255,1);
    }

    .banner__item__text a {
        display: inline-block;
        padding: 10px 25px;
        background: #F89B28;
        color: white;
        border-radius: 25px;
        text-decoration: none;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .banner__item__text a:before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s ease;
        }

        .banner__item__text a:hover {
            background: #662C1B;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

            .banner__item__text a:hover:before {
                left: 100%;
            }

    /* Product Section Enhancement */
    .filter__controls {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 40px;
    }

        .filter__controls li {
            padding: 8px 20px;
            cursor: pointer;
            position: relative;
            transition: all 0.3s ease;
            color: #662C1B;
        }

            .filter__controls li:before {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                background: #F89B28;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                transition: width 0.3s ease;
            }

            .filter__controls li:hover:before,
            .filter__controls li.active:before {
                width: 80%;
            }

            .filter__controls li.active {
                color: #F89B28;
                font-weight: bold;
            }

    /* Additional Global Enhancements */
    .img-fluid {
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .fa-check {
        transition: transform 0.3s ease;
    }

