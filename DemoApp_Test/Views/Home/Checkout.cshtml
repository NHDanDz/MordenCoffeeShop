                                {
                                    var itemTotal = item.Price * item.Quantity * (1 - (item.Discount / 100.0));
                                    <li>
                                         @item.ProductName
                                        (@item.Quantity x @itemTotal.ToString("#,0").Replace(",", "."))
                                        @if (item.Discount > 0)
                                        {
                                            <small class="text-danger">(-@item.Discount%)</small>
                                        }
                                        <span>₫@itemTotal.ToString("#,0").Replace(",", ".")</span>
                                    </li>
                                }
                            </ul>
