@model CartItemViewModel 

@{
    ViewData["Title"] = "Check Out";
    var cartItems = Model?.CartItems ?? new List<CartItemModel>();
    var total = Model?.TongTien ?? 0;
}
<style>
    /* Payment Modal Styles */
    .modal-content {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .modal-header {
        padding: 1.5rem 1.5rem 1rem;
    }

    .modal-body {
        padding: 1rem 1.5rem 1.5rem;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 0.5rem;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: all 0.2s;
    }

        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 500;
        transition: all 0.2s;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

    /* Bank Transfer Specific Styles */
    .bank-info {
        background: #f8f9fa;
        border-radius: 1rem;
        padding: 1.5rem;
    }

    .qr-code {
        border-radius: 0.5rem;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .bank-details {
        margin-top: 1rem;
    }

    .detail-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 0;
        border-bottom: 1px solid #dee2e6;
    }

        .detail-item:last-child {
            border-bottom: none;
        }

    .label {
        color: #6c757d;
        font-weight: 500;
    }

    .value-group {
        display: flex;
        align-items: center;
    }

    .value {
        font-weight: 500;
        margin-right: 0.5rem;
    }

    .bank-logo {
        border-radius: 4px;
        margin-right: 0.5rem;
    }

    .copy-btn {
        background: none;
        border: none;
        color: #007bff;
        padding: 0.25rem;
        cursor: pointer;
        transition: color 0.2s;
    }

        .copy-btn:hover {
            color: #0056b3;
        }

    /* Credit Card Specific Styles */
    .card-wrapper {
        margin-top: -40px;
    }

    /* Alert Styles */
    .alert {
        border-radius: 0.5rem;
        border: 1px solid transparent;
    }

    .alert-info {
        color: #0c5460;
        background-color: #d1ecf1;
        border-color: #bee5eb;
    }

    /* Animation */
    .modal.fade .modal-dialog {
        transform: translate(0, -50px);
        transition: transform 0.3s ease-out;
    }

    .modal.show .modal-dialog {
        transform: none;
    }
</style>

