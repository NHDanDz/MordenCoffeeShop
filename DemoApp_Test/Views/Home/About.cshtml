@{
}

<style>
     
    .breadcrumb-option {
        padding: 80px 0;
        position: relative;
        min-height: 200px;
    }

    .breadcrumb__text {
        position: relative;
        z-index: 1;
    }

        .breadcrumb__text h4 {
            color: #ffffff;
            font-size: 36px;
            font-weight: 700;
            margin-bottom: 10px;
        }

    .breadcrumb__links a,
    .breadcrumb__links span {
        color: #ffffff;
        font-size: 16px;
    }

        .breadcrumb__links a:hover {
            color: #e53637;
        }

    /* Thêm overlay để text dễ đọc hơn trên background */
    .breadcrumb-option::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
    }
.team__item img {
    max-width: 100%; /* Đảm bảo hình ảnh hiển thị đúng kích thước */
    margin: 0 auto; /* Đảm bảo hình ảnh được căn giữa */
}

.team__item h4,
.team__item span {
    display: block;
    margin-top: 10px; /* Thêm khoảng cách giữa các thành phần */
}

    .team__item img {
        width: 100%; /* Chiều rộng tối đa bằng kích thước container */
        max-width: 150px; /* Đặt chiều rộng tối đa cho ảnh */
        height: auto; /* Đảm bảo tỉ lệ ảnh không bị biến dạng */
        display: block; /* Loại bỏ khoảng cách thừa dưới ảnh */
        margin: 0 auto; /* Căn giữa ảnh */
    }

</style>



<!-- Breadcrumb Section Begin --> 
<section class="breadcrumb-option" data-setbg="/img/hero/hero-11.jpg">
