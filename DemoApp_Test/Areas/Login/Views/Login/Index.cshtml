 
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Login/images/img-02.jpg" alt="IMG">
                </div>

                <form id="loginForm" class="login100-form validate-form" method="post"
                      action="/Login/Login/Login">
                    @Html.AntiForgeryToken()

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3">
                            @ViewBag.Error
                        </div> 
                    }

                    <span class="login100-form-title"  style="padding-bottom: 10px !important">
                        <h1 class="mb-3" style="font-weight: bold !important; color: #f7b86a !important;"> NHDanDz </h1> 
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Username is required">
                        <input class="input100" type="text" name="Username" placeholder="Username"
                               required value="@ViewBag.LastUsername">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" type="Password" name="Password" placeholder="Password" required>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Login
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="@Url.Action("ForgotPassword", "Login", new { area = "Login" })">
                              Password?
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="@Url.Action("Register", "Login", new { area = "Login" })">
                            Create your Account
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>

                     
                </form>
<script>
    $('.js-tilt').tilt({
        scale: 1.1,
        glare: true,
        maxGlare: .3
    });

    // Enhanced form animations
    $(document).ready(function() {
        // Smooth focus animations
        $('.input100').focus(function() {
            $(this).parent().addClass('focused');
        }).blur(function() {
            $(this).parent().removeClass('focused');
        });

        // Form submission handling
        $('#loginForm').on('submit', function(e) {
            console.log('Form Submission Started');
            console.log('Action URL:', $(this).attr('action'));

            var formData = new FormData(this);
            console.log('Form Data:');
            for (var pair of formData.entries()) {
                console.log(pair[0] + ': ' + (pair[0] === 'Password' ? '****' : pair[1]));
            }

            console.log('Form Method:', $(this).attr('method'));
            console.log('Form Validations:', $(this)[0].checkValidity());
        });
    });
</script>